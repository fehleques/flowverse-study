---
import Logo from "@components/assets/Logo.astro";
---

<nav class="navbar">
  <div class="main-container">
    <div class="navbar_comp">
      <a href="/" class="navbar_logo-wrapper"><Logo /></a>
      <ul class="navbar_menu-desktop">
        <li><a href="/about">About</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>
  </div>
</nav>
<style>
  .navbar {
    background-color: grey;
    color: white;
  }

  .navbar_comp {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  .navbar_menu-desktop {
    display: flex;
    flex-direction: row;
    gap: 5px;

    & li {
      padding: 10px;

      &:hover {
        background-color: black;
      }
    }
  }

  .navbar_logo-wrapper {
    width: 150px;
  }
</style>
